{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://shipIt.com/apiSchema",
  "title": "Receipts",
  "description": "Return receipts for API POST requests.",
  "type": "object",
  "properties": {
    "productId": {
      "type": "integer",
      "minimum": 1000
    },
    "name": {
      "type": "string"
    },
    "addr": {
      "type": "string"
    },
    "zip": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "productId",
    "name",
    "addr",
    "zip"
  ]
}